@typeparam T


<MudGrid>
    @if (!string.IsNullOrWhiteSpace(Name))
    {
        <MudItem xs="NameXS" Class="align-self-center">
            <MudText Typo="Typo.h5" Align="Align.Center">@Name = </MudText>
        </MudItem>
    }
    @if (Vector == null)
    {
        <MudProgressCircular Indeterminate="true"></MudProgressCircular>
    }   
    else
    {
        <MudItem xs="VectorXS">
            <MudSimpleTable Bordered="true">
                <tbody>
                    @if (Mode == DisplayMode.Horizontal)
                    {
                        <tr>
                            @for (int i = 0; i < Vector.Size; i++)
                            {
                                int index = i;
                                <td>
                                    @if (Editable)
                                    {
                                        <MudTextField T="T" @bind-Value="Vector[index]" Variant="Variant.Text"></MudTextField>
                                    }
                                    else
                                    {
                                        @Display(Vector[index])
                                    }
                                </td>
                            }
                        </tr>
                    }
                    else
                    {
                        @for (int i = 0; i < Vector.Size; i++)
                        {
                            int index = i;
                            <tr>
                                <td>
                                    @if (Editable)
                                    {
                                        <MudTextField T="T" @bind-Value="Vector[index]" Variant="Variant.Text"></MudTextField>
                                    }
                                    else
                                    {
                                        <MudText>
                                            @Display(Vector[index])
                                        </MudText>  
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </MudSimpleTable>
        </MudItem>
    }
</MudGrid> 
